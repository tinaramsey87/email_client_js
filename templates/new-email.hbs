{{#if mailSent}}
<div class="alert alert-success alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close" {{action 'reset'}}><span aria-hidden="true">&times;</span></button>
  <strong>Success!</strong> Your message has been sent.
</div>
{{/if}}
{{#if isComposing}}
<form>
  <h3>New Email</h3>
  <div class="input-group">
    <label for="sender" class="sr-only">Sender</label>
    {{input value=sender id="sender" class="form-control" placeholder="Sender" aria-describedby="basic-addon2"}}<span class="input-group-addon" id="basic-addon2">@email.com</span>
  </div>
  <div class="input-group">
    <label for="recipient" class="sr-only">Recipient</label>
    {{input value=recipient id="recipient" class="form-control" placeholder="Recipient" aria-describedby="basic-addon2"}}<span class="input-group-addon" id="basic-addon2">@email.com</span>
  </div>
  <div class="form-group">
    <label for="subject" class="sr-only">Subject</label>
    {{input value=subject id="subject" class="form-control" placeholder="Subject"}}
  </div>
  <div class="form-group">
    <label for="body" class="sr-only">Body</label>
    {{textarea value=body id="body" class="form-control" rows="15" placeholder="Your Message Here"}}
  </div>

  <button class="btn btn-primary" {{action 'send'}}><label>Send Email</label></button>
</form>
{{/if}}
