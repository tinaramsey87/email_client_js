<form>
  <h3>New Email</h3>
  <div class="form-group">
    {{input value=sender id="sender" class="form-control" placeholder="Sender"}}
  </div>
  <div class="form-group">
    {{input value=recipient id="recipient" class="form-control" placeholder="Recipient"}}
  </div>
  <div class="form-group">
    {{input value=subject id="subject" class="form-control" placeholder="Subject"}}
  </div>
  <div class="form-group">
    {{textarea value=body id="body" class="form-control" rows="15" placeholder="Your Message Here"}}
  </div>

  <button class="btn btn-primary" {{action 'send'}}>Send Email</button>
</form>
